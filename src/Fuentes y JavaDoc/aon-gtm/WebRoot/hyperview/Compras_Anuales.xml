                <layout type="COLUMN"/>
                <contents>
                    <listViewContent id="view/Ventas/Dia.exvw.xml">
                        <sentence>SELECT DAY(invoice.issue_date), SUM(TRUNCATE(invoice_detail.taxable_base,2))&#xd;
