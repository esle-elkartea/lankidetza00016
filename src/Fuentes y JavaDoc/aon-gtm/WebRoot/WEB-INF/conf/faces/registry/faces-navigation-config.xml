<?xml version="1.0"?>
<!DOCTYPE faces-config PUBLIC
  "-//Sun Microsystems, Inc.//DTD JavaServer Faces Config 1.1//EN"
  "http://java.sun.com/dtd/web-facesconfig_1_1.dtd">

<faces-config>
  <!-- =================== Navigation Rules ================= -->

  <!-- =================== Company Administration ================= -->
  <navigation-rule>
    <navigation-case>
      <from-outcome>company_form</from-outcome>
      <to-view-id>/facelet/registry/company/company.faces</to-view-id>
    </navigation-case>
    <navigation-case>
      <from-outcome>company_init</from-outcome>
      <to-view-id>/facelet/homepage/firstContent.faces</to-view-id>
    </navigation-case>
  </navigation-rule>

  <!-- ********************************* -->
  <!-- ************ MENU *************** -->
  <!-- ********************************* -->
  
  <navigation-rule>
    <navigation-case>
      <from-outcome>company</from-outcome>
      <to-view-id>/facelet/registry/company/company.faces</to-view-id>
    </navigation-case>
  </navigation-rule>

</faces-config>
