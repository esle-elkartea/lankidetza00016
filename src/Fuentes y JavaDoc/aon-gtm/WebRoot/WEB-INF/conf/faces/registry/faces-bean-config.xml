<?xml version="1.0"?>
<!DOCTYPE faces-config PUBLIC
  "-//Sun Microsystems, Inc.//DTD JavaServer Faces Config 1.1//EN"
  "http://java.sun.com/dtd/web-facesconfig_1_1.dtd">

<faces-config>

	<!--  **** COMPANY **** -->
	<managed-bean>
		<managed-bean-name>company</managed-bean-name>
		<managed-bean-class>
			com.code.aon.ui.registry.controller.CompanyController
		</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
		<managed-property>
			<property-name>queryOnStartUP</property-name>
			<value>true</value>
		</managed-property>
		<managed-property>
			<property-name>pojo</property-name>
			<value>com.code.aon.company.Company</value>
		</managed-property>
		<managed-property>
			<property-name>listenerClasses</property-name>
			<list-entries>
				<value-class>com.code.aon.ui.form.event.IControllerListener</value-class>
				<value>#{companyControllerListener}</value>
				<value>#{companyPOSListener}</value>
				<value>#{companyLogoControllerListener}</value>
				<value>#{companyRBankChildListener}</value>
				<value>#{companyRPayMethodChildListener}</value>
			</list-entries>
		</managed-property>
	</managed-bean>
	
	<managed-bean>
		<managed-bean-name>companyLogoControllerListener</managed-bean-name>
		<managed-bean-class>
			com.code.aon.ui.registry.event.CompanyLogoControllerListener
		</managed-bean-class>
		<managed-bean-scope>none</managed-bean-scope>
	</managed-bean>

	<managed-bean>
		<managed-bean-name>companyControllerListener</managed-bean-name>
		<managed-bean-class>
			com.code.aon.ui.registry.event.CompanyControllerListener
		</managed-bean-class>
		<managed-bean-scope>none</managed-bean-scope>
	</managed-bean>
	
	<managed-bean>
		<managed-bean-name>companyPOSListener</managed-bean-name>
		<managed-bean-class>
			com.code.aon.ui.sales.event.CompanyPOSListener
		</managed-bean-class>
		<managed-bean-scope>none</managed-bean-scope>
	</managed-bean>

	<managed-bean>
		<managed-bean-name>companyAddress</managed-bean-name>
		<managed-bean-class>
			com.code.aon.ui.form.BasicController
		</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
		<managed-property>
			<property-name>pojo</property-name>
			<value>com.code.aon.registry.RegistryAddress</value>
		</managed-property>
		<managed-property>
			<property-name>listenerClasses</property-name>
			<list-entries>
				<value-class>com.code.aon.ui.form.event.IControllerListener</value-class>
				<value>#{companyAddressListener}</value>
				<value>#{companyAddressPosListener}</value>
				<value>#{companyRegistryChildListener}</value>
			</list-entries>
		</managed-property>
	</managed-bean>
	
	<managed-bean>
		<managed-bean-name>companyAddressPosListener</managed-bean-name>
		<managed-bean-class>
			com.code.aon.ui.registry.event.CompanyAddressPosListener
		</managed-bean-class>
		<managed-bean-scope>none</managed-bean-scope>
	</managed-bean>

	<managed-bean>
		<managed-bean-name>companyAddressListener</managed-bean-name>
		<managed-bean-class>
			com.code.aon.ui.registry.event.AddressListener
		</managed-bean-class>
		<managed-bean-scope>none</managed-bean-scope>
	</managed-bean>

	<managed-bean>
		<managed-bean-name>companyRegistryChildListener</managed-bean-name>
		<managed-bean-class>
			com.code.aon.ui.form.listener.ChildControllerListener
		</managed-bean-class>
		<managed-bean-scope>none</managed-bean-scope>
		<managed-property>
			<property-name>masterBean</property-name>
			<value>company</value>
		</managed-property>
		<managed-property>
			<property-name>masterPropertyName</property-name>
			<value>registry</value>
		</managed-property>
	</managed-bean>
	
	<!-- **** COMPANY RBANK **** -->
	<managed-bean>
		<managed-bean-name>companyRbank</managed-bean-name>
		<managed-bean-class>
			com.code.aon.ui.form.LinesController
		</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
		<managed-property>
			<property-name>pojo</property-name>
			<value>com.code.aon.finance.RegistryBank</value>
		</managed-property>
		<managed-property>
			<property-name>cascadeDelete</property-name>
			<value>true</value>
		</managed-property>
		<managed-property>
			<property-name>masterControllerName</property-name>
			<value>company</value>
		</managed-property>
		<managed-property>
			<property-name>propertyMap</property-name>
			<map-entries>
				<map-entry>
					<key>id</key>
					<value>registry.id</value>
				</map-entry>
			</map-entries>
		</managed-property>
	</managed-bean>
	
	<managed-bean>
		<managed-bean-name>companyRBankChildListener</managed-bean-name>
		<managed-bean-class>
			com.code.aon.ui.form.listener.LinesControllerListener
		</managed-bean-class>
		<managed-bean-scope>none</managed-bean-scope>
		<managed-property>
			<property-name>childBean</property-name>
			<value>companyRbank</value>
		</managed-property>
		<managed-property>
			<property-name>aliasMap</property-name>
			<map-entries>
				<map-entry>
					<key>RegistryBank_registry_id</key>
                    <value>id</value>
				</map-entry>
			</map-entries>
		</managed-property>
	</managed-bean>

	<!-- **** COMPANY RPAYMETHOD **** -->
	<managed-bean>
		<managed-bean-name>companyRpayMethod</managed-bean-name>
		<managed-bean-class>
			com.code.aon.ui.finance.controller.RegistryRPayMethodController
		</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
		<managed-property>
			<property-name>pojo</property-name>
			<value>com.code.aon.finance.RegistryPayMethod</value>
		</managed-property>
		<managed-property>
			<property-name>cascadeDelete</property-name>
			<value>true</value>
		</managed-property>
		<managed-property>
			<property-name>masterControllerName</property-name>
			<value>company</value>
		</managed-property>
		<managed-property>
			<property-name>propertyMap</property-name>
			<map-entries>
				<map-entry>
					<key>id</key>
					<value>registry.id</value>
				</map-entry>
			</map-entries>
		</managed-property>
	</managed-bean>
	
	<managed-bean>
		<managed-bean-name>companyRPayMethodChildListener</managed-bean-name>
		<managed-bean-class>
			com.code.aon.ui.form.listener.LinesControllerListener
		</managed-bean-class>
		<managed-bean-scope>none</managed-bean-scope>
		<managed-property>
			<property-name>childBean</property-name>
			<value>companyRpayMethod</value>
		</managed-property>
		<managed-property>
			<property-name>aliasMap</property-name>
			<map-entries>
				<map-entry>
					<key>RegistryPayMethod_registry_id</key>
                    <value>id</value>
				</map-entry>
			</map-entries>
		</managed-property>
	</managed-bean>	
	
</faces-config>
